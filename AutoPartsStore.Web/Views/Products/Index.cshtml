@model IEnumerable<AutoPartsStore.Infrastructure.ViewModels.ProductSingleModel>
@{
    ViewData["Title"] = "محصولات";
}

@section Head{
    <link href="/css/component.css" rel="stylesheet" />
}
<!-- content-section-starts -->
<div class="container">
    <div class="products-page row">
        <div class=" col-12 ">
            <partial name="_FilterProductsPartailView" model="ViewBag.FilterModel" />
            <div class="row mt-4 mb-4 justify-content-center col-12">
                    @foreach (var item in Model)
                    {

                        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                            <div class="card">
                                <a class="" href="/products/details/@item.Id">
                                    <img height="200" class="card-img" src="/img/@item.Image" alt="@item.Title">
                                    @*<div class="card-img-overlay d-flex justify-content-end">
                                    <a href="#" class="card-link text-danger like">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                </div>*@
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a class="text-secondary @(item.Title.Length < 24 ? "h-51" : "")" href="/products/details/@item.Id">
                                            @item.Title
                                        </a>
                                    </h5>
                                    <span class="card-subtitle text-muted">@item.CategoryTitle</span>
                                    <p class="card-text h-144">
                                        @item.Descrioption
                                    </p>
                                    <div>
                                        <div class="w-100 text-success"><h5 class="mt-4">@item.Price ریال</h5></div>
                                        <button onclick="addToCart(@item.Id , @item.Price)" class="btn btn-danger mt-3 float-right">
                                            <i class="fas fa-shopping-cart"></i>افزودن سبد خرید
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            <partial name="_PaginationPartial" model="ViewBag.Pagination" />
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>
<!-- content-section-ends -->
@section Scripts{

    <script src="/js/cart.js"></script>
    <script src="/js/cbpViewModeSwitch.js" type="text/javascript"></script>
    <script src="/js/classie.js" type="text/javascript"></script>
}