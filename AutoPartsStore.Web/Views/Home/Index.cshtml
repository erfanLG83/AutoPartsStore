            <div class="banner-bottom-left">
                <h2>خرید از<br> Auto <br> Iran</h2>
            </div>
            <div class="banner-bottom-right">
                <div class="callbacks_container">
                    <ul class="rslides" id="slider4">
                        <li>
                            <div class="banner-info">
                                <h3>قیمت های بصرفه و مناسب</h3>
                                <p>خرید خود را همین الان اغاز کنید</p>
                            </div>
                        </li>
                        <li>
                            <div class="banner-info">
                                <h3>خرید تمام آنلاین</h3>
                                <p>خرید خود را همین الان اغاز کنید</p>
                            </div>
                        </li>
                        <li>
                            <div class="banner-info">
                                <h3>بهترین جنس ها به همراه تضمین</h3>
                                <p>خرید خود را همین الان اغاز کنید</p>
                            </div>
                        </li>
                    </ul>
                    <script src="js/responsiveslides.min.js"></script>
                    <script>
                        // You can also use "$(window).load(function() {"
                        $(function () {
                            // Slideshow 4
                            $("#slider4").responsiveSlides({
                                auto: true,
                                pager: true,
                                nav: false,
                                speed: 500,
                                namespace: "callbacks",
                                before: function () {
                                    $('.events').append("<li>before event fired.</li>");
                                },
                                after: function () {
                                    $('.events').append("<li>after event fired.</li>");
                                }
                            });

                        });
                    </script>
                </div>
                <!--banner-->
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="shop">
            <a href="single.html">اخرین محصولات ما را ببنید</a>
        </div>
    </div>
</div>
<!-- content-section-starts-here -->
<div class="container">
    <div class="main-content">
        <div class="online-strip row">
            <div class="col-md-4 follow-us">
                <h3>
                    ما را دنبال کنید :
                    <a class="twitter" href="#"></a>
                    <a class="facebook" href="#"></a>
                </h3>
            </div>
            <div class="col-md-4 shipping-grid">
                <div class="shipping">
                    <img src="images/shipping.png" alt="" />
                </div>
                <div class="shipping-text">
                    <h3>ارسال رایگان</h3>
                    <p>برای خرید های بالاتراز 2,000,000</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="col-md-4 online-order">
                <p>تلفن پشتیبانی</p>
                <h3>999 4567 8902</h3>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="products-grid row justify-content-between">
            <header class="col-12">
                <h3 class="head text-center">آخرین محصولات</h3>
            </header>
            @foreach (var item in Model)
            {
                <div class="col-md-4 product simpleCart_shelfItem text-center">
                    <a href="/products/details/@item.Id"><img src="/img/@item.Image" alt="" /></a>
                    <div class="mask">
                        <a class="btn" href="/products/details/@item.Id">جزئیات</a>
                    </div>
                    <a class="product_name" href="/products/details/@item.Id">@item.Title</a>
                    <p><a class="item_add" href="#" onclick="addToCart(@item.Id,@item.Price)"><i></i> <span class="item_price">@item.Price.ToString("n0") ریال</span></a></p>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>

</div>
