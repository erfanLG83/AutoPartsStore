@model AutoPartsStore.Services.Features.Pagination
@{ 
    int i = Model.SelectedIndex - 4;
    int max = 9;
    if (i<1)
    {
        i = 1;
    }
}
    <ul class="mb-0 pagination">
        @if (Model.SelectedIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@(Model.GetUrl(Model.SelectedIndex - 1))" tabindex="-1">
                    <i class="fas fa-angle-right"></i>
                    @Html.Raw(Model.PreviousText)
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        @for (int j = 0; j < max && i <= Model.PageCount; j++, i++)
        {
            <li class="page-item active">
                <a class="page-link @(i==Model.SelectedIndex?"active":"")" href="@(Model.GetUrl(i))">@i</a>
            </li>
        }
        @if (Model.SelectedIndex < Model.PageCount)
        {
            <li class="page-item">
                <a class="page-link" href="@(Model.GetUrl(Model.SelectedIndex + 1))" tabindex="1">
                    <i class="fas fa-angle-left"></i>
                    @Html.Raw(Model.PreviousText)
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>