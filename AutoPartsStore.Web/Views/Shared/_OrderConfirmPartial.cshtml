@model AutoPartsStore.Infrastructure.ViewModels.Cart.OrderConfirmModel
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form asp-action="ConfirmOrder" asp-controller="Cart" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">نهایی کردن پرداخت</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-primary">
                        برای ارسال درب منزل شما باید اطلاعات زیر را وارد کنید.
                        تا ما با شما تماس بگیریم و سفارشات شما را در سریعترین زمان برسانیم
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">شماره تلفن</label>
                        <input asp-for="Phone" class="form-control" type="text" />
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostalCode">کد پستی</label>
                        <input asp-for="PostalCode" class="form-control" type="text" />
                        <span class="text-danger" asp-validation-for="PostalCode"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address">آدرس</label>
                        <textarea asp-for="Address" class="form-control" name="address"></textarea>
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">لفو</button>
                    <button type="submit" class="btn btn-primary">ثبت</button>
                </div>
            </form>
        </div>
    </div>
</div>